<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="93.48dp"
        android:layout_height="89.85dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="578dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtSignIn"
        android:layout_width="163dp"
        android:layout_height="36dp"
        android:layout_marginTop="183dp"
        android:fontFamily="@font/tchoitalic"
        android:gravity="center"
        android:text="Вход"
        android:textColor="@color/purple"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <EditText
        android:id="@+id/inputName2"
        android:layout_width="328.32dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Wh"
        android:ems="10"
        android:fontFamily="@font/tchoitalic"
        android:hint="Email"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/purple"
        android:textColorHint="@color/lightPurple"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <EditText
        android:id="@+id/inputPassword2"
        android:layout_width="328.32dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Wh"
        android:ems="10"
        android:fontFamily="@font/tchoitalic"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColor="@color/purple"
        android:textColorHint="@color/lightPurple"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="328.32dp"
        android:layout_height="49dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/tchoitalic"
        android:onClick="tap2"
        android:text="Войти"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/Wh"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <ImageView
        android:id="@+id/wannaCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:onClick="tap2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937"
        app:srcCompat="@drawable/wannacreate" />


</androidx.constraintlayout.widget.ConstraintLayout>