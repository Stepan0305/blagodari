<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="93.48dp"
        android:layout_height="89.85dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="578dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="163dp"
        android:layout_height="36dp"
        android:layout_marginTop="183dp"
        android:fontFamily="@font/tchoitalic"
        android:gravity="center"
        android:text="Регистрация"
        android:textColor="@color/purple"
        android:textSize="31sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inputName1"
        android:layout_width="328.32dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Wh"
        android:ems="10"
        android:fontFamily="@font/tchoitalic"
        android:hint="Имя"
        android:inputType="textPersonName"
        android:textColor="@color/purple"
        android:textColorHint="@color/lightPurple"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="328.32dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Wh"
        android:ems="10"
        android:fontFamily="@font/tchoitalic"
        android:hint="Фамилия"
        android:inputType="textPersonName"
        android:textColor="@color/purple"
        android:textColorHint="@color/lightPurple"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="328.32dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Wh"
        android:ems="10"
        android:fontFamily="@font/tchoitalic"
        android:hint="Email"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/purple"
        android:textColorHint="@color/lightPurple"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <EditText
        android:id="@+id/inputPassword1"
        android:layout_width="328.32dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Wh"
        android:ems="10"
        android:fontFamily="@font/tchoitalic"
        android:hint="Пароль, не менее 6 символов"
        android:inputType="textPassword"
        android:textColor="@color/purple"
        android:textColorHint="@color/lightPurple"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="328.32dp"
        android:layout_height="49dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/buttons"
        android:onClick="Tap1"
        android:fontFamily="@font/tchoitalic"
        android:text="Далее"
        android:textAllCaps="false"
        android:textColor="@color/Wh"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <ImageView
        android:id="@+id/alreadyHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="Tap1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929"
        app:srcCompat="@drawable/alreadyhave" />


</androidx.constraintlayout.widget.ConstraintLayout>