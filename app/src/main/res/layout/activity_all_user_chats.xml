<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllUserChatsActivity"
    android:background="@color/superLightBlue">
    <FrameLayout
        android:id="@+id/frameTop"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageButton
            android:id="@+id/btnBackOnUserChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:background="@color/unvisible"
            android:paddingStart="25dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="242dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Мои чаты"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUserChats"
        android:layout_width="match_parent"
        android:layout_height="649dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/frameTop"/>
</RelativeLayout>